<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

</head>

<body>

    <h1>Chat Criptografado</h1>
    <div id="chat">

    </div><br>
    <input type="text" name="" id="msg"><br>
    <input type="text" name="" id="username" placeholder="Seu nome de usuario">
    <button onclick="enviar()">Enviar</button>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.1/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/aes.js"></script>
<script>


    var socket = io("http://localhost:3000")


    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    let chatKey = urlParams.get('chat')


    socket.on("showmsg", (data) => {
        var chat = document.getElementById("chat")
        var p = document.createElement("p");
        let decryptedMsg = CryptoJS.AES.decrypt(data.msg, chatKey).toString(CryptoJS.enc.Utf8);
        if (decryptedMsg == false) {
            return
        } else {
            p.innerText = data.username + ": " + decryptedMsg
            chat.append(p)
        }



    })
    function enviar() {
        let msgField = document.getElementById("msg")
        let usernameField = document.getElementById("username")
        if(chatKey == null || ""){
            chatKey = "default"
        }
        var msg = msgField.value
        let cryptedMsg = CryptoJS.AES.encrypt(msg, chatKey).toString();

        var username = usernameField.value
        console.log(cryptedMsg)

        socket.emit("msg", { msg: cryptedMsg, username: username })
    }

</script>

</html>